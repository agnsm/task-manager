@model IEnumerable<TaskManager.Models.TaskModel>

@{
    ViewData["Title"] = "Aktywne zadania";
}

<h1 class="display-4">Lista zadań do wykonania</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width: 55%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width: 45%">
                @Html.ActionLink("Gotowe", "Done", new { id = item.TaskId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Edytuj", "Edit", new { id = item.TaskId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Szczegóły", "Details", new { id = item.TaskId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.TaskId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
